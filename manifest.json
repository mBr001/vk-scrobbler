{
  "name": "VK scrobbler",
  "description": "Скробблинг проигрываемой на vk.com музыки на last.fm",
  "icons": {
    "128": "blocks/logo/logo_128.png"
  },
  "version": "2.0.3",
  "manifest_version": 2,
  "minimum_chrome_version": "41.0",
  "background": {
    "scripts": [
      "blocks/namespace/namespace.js",
      "components/md5.min.js",
      "blocks/log/log.js",
      "blocks/lastfm-api/lastfm-api__client.js",
      "blocks/lastfm-api/lastfm-api__config.js",
      "blocks/lastfm-api/lastfm-api.js",
      "blocks/analytics/analytics.js",
      "blocks/bus/bus__background.js",
      "blocks/content/content__messages.js",
      "blocks/background/background__auth.js",
      "blocks/background/background__actions.js",
      "blocks/background/background.js"
    ]
  },
  "applications": {
    "gecko": {
      "id": "vk-scrobbler@stsdc.org",
      "strict_min_version": "47.0"
    }
  },
  "permissions": [
    "tabs",
    "notifications",
    "*://*.vk.com/*"
  ],
  "content_scripts": [{
    "matches": ["*://*.vk.com/*"],
    "js": [
      "blocks/namespace/namespace.js",
      "blocks/log/log.js",
      "blocks/player-view/player-view__utils.js",
      "blocks/player-view/player-view__indicators.js",
      "blocks/player-view/player-view__indicators__old.js",
      "blocks/player-view/player-view__album.js",
      "blocks/player-view/player-view__player-view.js",
      "blocks/bus/bus__content.js",
      "blocks/content/content__messages.js",
      "blocks/content/content__bus-wrapper.js",
      "blocks/content/content__script-injector.js",
      "blocks/content/content__utils.js",
      "blocks/content/content__player-handlers.js",
      "blocks/content/content.js"
    ],
    "css": [
      "blocks/player-view/__css/indicators.css",
      "blocks/player-view/__css/indicators__old.css"
    ]
  }],
  "homepage_url": "http://vkontakte.ru/vk_scrobbler",
  "web_accessible_resources": [
    "blocks/player-view/__img/*",
    "blocks/player-view/__img/player-view__img-tweet.png",
    "blocks/player-view/__img/player-view__img-love.png",
    "blocks/player-view/__img/player-view__img-unlove.png",
    "blocks/player-view/__img/player-view__img-disabled.png",
    "blocks/player-view/__img/player-view__img-equalizer.gif",
    "blocks/player-view/__img/player-view__img-pause.png",
    "blocks/player-view/__img/player-view__img-check-blue.png",
    "blocks/player-view/__img/player-view__img-default-cover.png",
    "blocks/namespace/*",
    "blocks/namespace/namespace.js",
    "blocks/log/log.js",
    "blocks/vk-inner/vk-inner__player_old.js",
    "blocks/vk-inner/vk-inner__player.js",
    "blocks/vk-inner/vk-inner.js"
  ],
  "content_security_policy": "script-src 'self' https://ws.audioscrobbler.com https://ssl.google-analytics.com; object-src 'self'; style-src 'self' 'unsafe-inline';"
}
